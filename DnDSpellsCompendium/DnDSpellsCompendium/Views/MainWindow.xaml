<Window x:Class="DnDSpellsCompendium.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:DnDSpellsCompendium.ViewModels"
        xmlns:local="clr-namespace:DnDSpellsCompendium"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <Style TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        </Style>
        <DataTemplate x:Key="spellItem">
            <!--<StackPanel Margin="2" Orientation="Horizontal">
                <TextBlock Text="{Binding Name}" FontSize="20" HorizontalAlignment="Left"/>
                <TextBlock Text="{Binding Components}" TextAlignment="Right" Width="400" Background="AliceBlue"/>
            </StackPanel>-->

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding Name}" FontSize="20" HorizontalAlignment="Left"/>
                <TextBlock Grid.Column="1" Text="{Binding Components}" TextAlignment="Right" TextWrapping="Wrap"/>
            </Grid>






        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4*"/>

        </Grid.ColumnDefinitions>
        <ListView
        Margin="10" 
        Name="SpellListView" 
        ItemsSource="{Binding Spells}" 
        ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
        ItemTemplate="{StaticResource spellItem}"/>
    </Grid>




</Window>
